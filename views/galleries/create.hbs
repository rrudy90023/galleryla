<div class="textwidget margin-top-30">
	<p>Create Gallery<p>
</div>
<div class="widget">
	<form name="create-gallery-form" id="create-gallery-form" method="post">
		<div class="form-group">
			<label for="galleryName">Gallery name</label>
			<input type="text" id="galleryName" name="galleryName" required value="{{input.galleryName}}"/>
		</div>
		<div class="form-group">
			<label for="address">Address</label>
			<input type="text" id="address" name="address" required value="{{input.address}}"/>
		</div>

		<div class="form-group">
			<label for="city">City</label>
			<input type="text" id="city" name="city" required value="{{input.city}}"/>
		</div>

		<div class="form-group">
			<label for="state">State</label>
			<input type="text" id="state" name="state" required value="{{input.state}}"/>
		</div>

		<div class="form-group">
			<label for="zipcode">Zipcode</label>
			<input type="text" id="zipcode" name="zipcode" required value="{{input.zipcode}}"/>
		</div>

		<div class="form-group">
			<label for="map">Map</label>
			<input type="text" id="map" name="map" required value="{{input.map}}"/>
		</div>

		<div class="form-group">
			<label for="website">Website</label>
			<input type="text" id="website" name="website" required value="{{input.website}}"/>
		</div>


		<div class="form-group">
			<label for="hours">Hours</label>
			<input type="text" id="hours" name="hours" required value="{{input.hours}}"/>
		</div>


		<div class="form-submit">
			<input type="submit" value="Create a gallery" />
		</div>
		<span style="color:red">{{error}}</span>
	</form>
</div>